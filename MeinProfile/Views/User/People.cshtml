@model List<AppUser>

@{
    ViewData["Title"] = "People";
}

<div class="text-center">
    <h1 class="display-4">People List</h1>
</div>
<hr />
<table class="table table-danger table-striped">
    <thead>
        <tr>
            <th>Fullname</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var people in Model)
        {
            <tr>
                <td>@people.Fullname</td>
                <td>@people.City</td>
            </tr>
        }
    </tbody>
</table>
<br />
<div style="text-align:center;">
    <a href="@Url.Action("Profile", "User", new { username = User.Identity.Name })" class="btn btn-primary btn-lg">My Profile</a>
</div>